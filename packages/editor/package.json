{
  "name": "@handoc/editor",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react --external react-dom --external prosemirror-model --external prosemirror-state --external prosemirror-view --external prosemirror-commands --external prosemirror-keymap --external prosemirror-history --external prosemirror-schema-basic --external prosemirror-schema-list --external prosemirror-tables",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@handoc/document-model": "workspace:*",
    "@handoc/hwpx-parser": "workspace:*",
    "@handoc/hwpx-writer": "workspace:*",
    "prosemirror-commands": "^1.6.0",
    "prosemirror-history": "^1.4.0",
    "prosemirror-keymap": "^1.2.0",
    "prosemirror-model": "^1.24.0",
    "prosemirror-schema-basic": "^1.2.0",
    "prosemirror-schema-list": "^1.4.0",
    "prosemirror-state": "^1.4.0",
    "prosemirror-tables": "^1.8.5",
    "prosemirror-view": "^1.34.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "jsdom": "^28.1.0"
  },
  "description": "ProseMirror-based HWPX document editor",
  "keywords": [
    "hwpx",
    "editor",
    "prosemirror",
    "react",
    "hancom",
    "document"
  ],
  "author": "MUIN <mj@muin.company>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muin-company/handoc.git",
    "directory": "packages/editor"
  },
  "homepage": "https://github.com/muin-company/handoc/tree/main/packages/editor",
  "bugs": {
    "url": "https://github.com/muin-company/handoc/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
